# =============================================================================
# FeedbackCue Configuration
# =============================================================================
# Copy this file to .env and update values for your environment.
# All variables have sensible defaults for local development.
# IMPORTANT: Change SECRET_KEY before deploying to production!

# --- Application ---
APP_NAME=FeedbackCue
ENVIRONMENT=development          # development | production

# --- Security ---
# REQUIRED for production. Generate with:
#   python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-me-to-a-random-secret-key

# --- Database ---
# SQLite via async SQLAlchemy. Path is relative to the working directory.
# For Docker, this is /app/data/feedbackcue.db (mounted as a volume).
DATABASE_URL=sqlite+aiosqlite:///./data/feedbackcue.db

# --- JWT Authentication ---
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440          # Token lifetime in minutes (default: 24 hours)

# --- Server ---
HOST=0.0.0.0
PORT=8000
